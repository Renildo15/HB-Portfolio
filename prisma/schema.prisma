generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
}

model User {
  id       Int     @id @default(autoincrement())
  email    String  @unique
  password String
}

model SectionType {
  id                  Int     @id @default(autoincrement())
  name                String
  type                String 
  configs_json        Json
  sections            Section[]
  created_at          DateTime @default(now())
  updated_at          DateTime @updatedAt
}
model Section {
  id                  Int     @id @default(autoincrement())
  name                String
  typeId              Int
  type                SectionType @relation(fields: [typeId], references: [id])
 
  values_json         Json
  order               Int
  created_at          DateTime @default(now())
  updated_at          DateTime @updatedAt
}

model PageView {
  id        Int      @id @default(autoincrement())
  path      String
  views     Int      @default(0)
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt
}